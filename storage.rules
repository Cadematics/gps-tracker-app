rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /logos/{companyId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == companyId &&
                    request.resource.size < 5 * 1024 * 1024 &&
                    request.resource.contentType.matches('image/.*');
    }
  }
}
